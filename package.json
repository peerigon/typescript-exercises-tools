{
  "name": "@peerigon/typescript-exercises-tools",
  "version": "1.0.0",
  "description": "Tools for writing and validating TypeScript exercises",
  "keywords": [
    "typescript",
    "language",
    "service",
    "server",
    "validate",
    "validation",
    "test",
    "types",
    "exercise"
  ],
  "main": "plugin.js",
  "scripts": {
    "build": "run-s build:clean build:tsc",
    "build:clean": "rimraf dist",
    "build:tsc": "tsc -p ./tsconfig.build.json",
    "test": "jest",
    "posttest": "run-p lint",
    "lint": "eslint --ext ts --ignore-path ./.eslintignore src",
    "prepare": "run-p build",
    "watch:build:tsc": "npm run build:tsc -- -w",
    "prepublishOnly": "pubcop",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/peerigon/typescript-exercises-tools.git"
  },
  "author": "peerigon <developers@peerigon.com>",
  "license": "Unlicense",
  "peerDependencies": {
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "@peerigon/typescript-exercises-tools": "file:/.",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.24.0",
    "eslint-config-peerigon": "^30.0.2",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "pubcop": "^1.0.2",
    "rimraf": "^3.0.2",
    "standard-version": "^9.2.0",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "files": [
    "dist",
    "plugin.js",
    "tests.js"
  ]
}
